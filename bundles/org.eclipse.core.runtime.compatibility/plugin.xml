<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.eclipse.core.runtime.compatibility"
   name="%pluginName"
   version="3.0.0"
   provider-name="%providerName">

   <runtime>
      <library name="compatibility.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime" export="true"/>
      <import plugin="org.eclipse.osgi.util" export="true"/>
      <import plugin="org.eclipse.osgi.services" export="true"/>
      <import plugin="org.eclipse.osgi" export="true"/>
      <import plugin="org.eclipse.update.configurator" export="true"/>
   </requires>


   <extension
         point="org.eclipse.core.runtime.applicationShutdownHook">
      <shutdownHook>
         <run
               class="org.eclipse.core.internal.plugins.PluginStopper">
         </run>
      </shutdownHook>
   </extension>

</plugin>
